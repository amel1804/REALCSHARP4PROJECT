@* ============================= Register.cshtml ============================= *@
@page
@model BasketballLiveScore.Pages.RegisterModel
@{
    ViewData["Title"] = "Inscription";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Basketball LiveScore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }

        .register-container {
            width: 100%;
            max-width: 500px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 3rem;
        }

        .register-header {
            text-align: center;
            margin-bottom: 2rem;
        }

            .register-header h2 {
                color: #333;
                margin-bottom: 0.5rem;
            }

        .form-control:focus {
            border-color: #FF6B35;
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
        }

        .btn-register {
            background: linear-gradient(135deg, #FF6B35 0%, #004E89 100%);
            border: none;
            color: white;
            padding: 0.75rem;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 10px;
        }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 20px rgba(255, 107, 53, 0.4);
            }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <h1>🏀</h1>
            <h2>Créer un compte</h2>
            <p class="text-muted">Rejoignez Basketball LiveScore</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
        </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
        </div>
        }

        <form method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Prénom</label>
                    <input asp-for="RegisterInput.FirstName" class="form-control" required />
                    <span asp-validation-for="RegisterInput.FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Nom</label>
                    <input asp-for="RegisterInput.LastName" class="form-control" required />
                    <span asp-validation-for="RegisterInput.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Nom d'utilisateur</label>
                <input asp-for="RegisterInput.Username" class="form-control" required />
                <span asp-validation-for="RegisterInput.Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="RegisterInput.Email" type="email" class="form-control" required />
                <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Mot de passe</label>
                <input asp-for="RegisterInput.Password" type="password" class="form-control" required />
                <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Rôle</label>
                <select asp-for="RegisterInput.Role" class="form-select">
                    <option value="Encoder">Encodeur</option>
                    <option value="Administrator">Administrateur</option>
                    <option value="Viewer">Spectateur</option>
                </select>
            </div>

            <button type="submit" class="btn btn-register w-100 mb-3">
                <i class="bi bi-person-plus"></i> Créer le compte
            </button>

            <div class="text-center">
                <a href="/Login" class="text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Retour à la connexion
                </a>
            </div>
        </form>
    </div>
</body>
</html>


