            <div class="feature-card">
                <div class="feature-icon">📊</div>
                <h3 class="feature-title">Statistiques Détaillées</h3>
                <p class="feature-description">
                    Historique complet des matchs, statistiques par joueur et équipe,
                    analyses de performance et rapports détaillés.
                </p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon">🔄</div>
                <h3 class="feature-title">Synchronisation Live</h3>
                <p class="feature-description">
                    Mise à jour en temps réel grâce à SignalR. Tous les spectateurs voient
                    les changements instantanément.
                </p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon">👥</div>
                <h3 class="feature-title">Multi-utilisateurs</h3>
                <p class="feature-description">
                    Système de rôles complet : Administrateurs, Encodeurs et Spectateurs
                    avec permissions adaptées.
                </p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon">🔒</div>
                <h3 class="feature-title">Sécurité Renforcée</h3>
                <p class="feature-description">
                    Authentification JWT, mots de passe hashés avec PBKDF2,
                    et protection contre les attaques courantes.
                </p>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="stats-section">
        <div class="row">
            <div class="col-12 text-center mb-4">
                <h2 class="display-4">Notre Plateforme en Chiffres</h2>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-number" data-target="150">0</div>
                    <div class="stat-label">Matchs Encodés</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-number" data-target="24">0</div>
                    <div class="stat-label">Équipes Actives</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-number" data-target="320">0</div>
                    <div class="stat-label">Joueurs Enregistrés</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-number" data-target="95">0</div>
                    <div class="stat-label">% Satisfaction</div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    @if (!isAuthenticated)
    {
    <div class="text-center py-5">
        <h2 class="display-4 mb-4">Prêt à Commencer ?</h2>
        <p class="lead mb-4">Rejoignez la plateforme de référence pour l'encodage des matchs de basketball</p>
        <div>
            <a href="/Register" class="btn btn-hero btn-primary-hero">
                <i class="bi bi-rocket-takeoff"></i> Commencer Maintenant
            </a>
        </div>
        <p class="mt-3 text-muted">
            Déjà un compte ? <a href="/Login" class="text-decoration-none">Connectez-vous ici</a>
        </p>
    </div>
    }
</div>

@section Scripts {
    <script>
        // Animation des compteurs
        document.addEventListener('DOMContentLoaded', function() {
            const counters = document.querySelectorAll('.stat-number');
            const speed = 200;

            const animateCounters = () => {
                counters.forEach(counter => {
                    const updateCount = () => {
                        const target = +counter.getAttribute('data-target');
                        const count = +counter.innerText;
                        const inc = target / speed;

                        if (count < target) {
                            counter.innerText = Math.ceil(count + inc);
                            setTimeout(updateCount, 10);
                        } else {
                            counter.innerText = target;
                            // Ajouter le symbole % pour la satisfaction
                            if (counter.getAttribute('data-target') === '95') {
                                counter.innerText = target + '%';
                            }
                        }
                    };
                    updateCount();
                });
            };

            // Observer pour déclencher l'animation quand visible
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounters();
                        observer.disconnect();
                    }
                });
            });

            const statsSection = document.querySelector('.stats-section');
            if (statsSection) {
                observer.observe(statsSection);
            }
        });
    </script>
}