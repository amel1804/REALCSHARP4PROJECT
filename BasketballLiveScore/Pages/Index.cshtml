@page
@model BasketballLiveScore.Pages.IndexModel
@{
    ViewData["Title"] = "Accueil";
    Layout = "_Layout";
    var isAuthenticated = !string.IsNullOrEmpty(HttpContext.Session.GetString("Token"));
    var username = HttpContext.Session.GetString("Username");
    var role = HttpContext.Session.GetString("Role");
}

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 100px 0;
        border-radius: 20px;
        margin-bottom: 50px;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: rotate 30s linear infinite;
    }

    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        animation: fadeInDown 1s ease;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 30px;
        opacity: 0.95;
        animation: fadeInUp 1s ease 0.3s both;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 0.95;
            transform: translateY(0);
        }
    }

    /* Feature Cards */
    .feature-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        height: 100%;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .feature-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .feature-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 15px;
        color: #333;
    }

    .feature-description {
        color: #666;
        line-height: 1.6;
    }

    /* Stats Section */
    .stats-section {
        background: #f8f9fa;
        padding: 60px 0;
        border-radius: 20px;
        margin: 50px 0;
    }

    .stat-card {
        text-align: center;
        padding: 20px;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: bold;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-label {
        color: #666;
        font-size: 1.1rem;
        margin-top: 10px;
    }

    /* Action Buttons */
    .btn-hero {
        padding: 15px 40px;
        font-size: 1.2rem;
        border-radius: 50px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        margin: 10px;
        display: inline-block;
    }

    .btn-primary-hero {
        background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
        color: white;
        border: none;
    }

    .btn-primary-hero:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(255, 107, 53, 0.3);
        color: white;
    }

    .btn-secondary-hero {
        background: white;
        color: #667eea;
        border: 2px solid white;
    }

    .btn-secondary-hero:hover {
        background: rgba(255,255,255,0.1);
        color: white;
        transform: translateY(-3px);
    }

    /* Quick Actions Grid */
    .quick-action-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        border: 2px solid transparent;
    }

    .quick-action-card:hover {
        border-color: #667eea;
        transform: scale(1.05);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
    }

    .quick-action-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
        color: #667eea;
    }

    /* Live Matches Ticker */
    .live-ticker {
        background: #1a1a2e;
        color: white;
        padding: 15px;
        border-radius: 10px;
        margin: 30px 0;
        overflow: hidden;
    }

    .live-ticker-content {
        display: flex;
        animation: scroll 20s linear infinite;
    }

    @@keyframes scroll {
        0% { transform: translateX(100%); }
        100% { transform: translateX(-100%); }
    }

    .ticker-item {
        white-space: nowrap;
        padding: 0 50px;
        display: flex;
        align-items: center;
    }

    .live-indicator {
        width: 10px;
        height: 10px;
        background: #ff0000;
        border-radius: 50%;
        margin-right: 10px;
        animation: pulse 1s infinite;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
</style>

<div class="container-fluid px-4">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content text-center">
            <h1 class="hero-title">🏀 Basketball LiveScore</h1>
            <p class="hero-subtitle">Système professionnel d'encodage en temps réel des matchs de basketball</p>

            @if (isAuthenticated)
            {
            <div class="mt-4">
                <h3>Bienvenue, @username ! 👋</h3>
                <p>Vous êtes connecté en tant que <span class="badge bg-light text-dark">@role</span></p>
                <div class="mt-4">
                    <a href="/Dashboard" class="btn btn-hero btn-primary-hero">
                        <i class="bi bi-speedometer2"></i> Tableau de bord
                    </a>
                    <a href="/LiveScore" class="btn btn-hero btn-secondary-hero">
                        <i class="bi bi-broadcast"></i> Score en direct
                    </a>
                </div>
            </div>
            }
            else
            {
            <div class="mt-4">
                <a href="/Login" class="btn btn-hero btn-primary-hero">
                    <i class="bi bi-box-arrow-in-right"></i> Se connecter
                </a>
                <a href="/Register" class="btn btn-hero btn-secondary-hero">
                    <i class="bi bi-person-plus"></i> S'inscrire
                </a>
            </div>
            }
        </div>
    </div>

    <!-- Live Ticker (si des matchs sont en cours) -->
    <div class="live-ticker">
        <div class="live-ticker-content">
            <div class="ticker-item">
                <span class="live-indicator"></span>
                <strong>EN DIRECT:</strong> Lakers vs Warriors - Q3 - 78:82
            </div>
            <div class="ticker-item">
                <span class="live-indicator"></span>
                <strong>EN DIRECT:</strong> Bulls vs Celtics - Q2 - 45:43
            </div>
        </div>
    </div>

    @if (isAuthenticated)
    {
        <!-- Quick Actions for Authenticated Users -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Actions Rapides</h2>
        </div>
        @if (role == "Administrator" || role == "Encoder")
            {
        <div class="col-md-3 mb-3">
            <div class="quick-action-card" onclick="window.location.href='/MatchSetup'">
                <i class="bi bi-plus-circle quick-action-icon"></i>
                <h5>Nouveau Match</h5>
                <p class="text-muted">Configurer un match</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="quick-action-card" onclick="window.location.href='/Teams'">
                <i class="bi bi-people quick-action-icon"></i>
                <h5>Gérer Équipes</h5>
                <p class="text-muted">Équipes et joueurs</p>
            </div>
        </div>
            }
        <div class="col-md-3 mb-3">
            <div class="quick-action-card" onclick="window.location.href='/LiveScore'">
                <i class="bi bi-broadcast-pin quick-action-icon"></i>
                <h5>Score Live</h5>
                <p class="text-muted">Voir les matchs</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="quick-action-card" onclick="window.location.href='/Dashboard'">
                <i class="bi bi-graph-up quick-action-icon"></i>
                <h5>Statistiques</h5>
                <p class="text-muted">Analyses détaillées</p>
            </div>
        </div>
    </div>
    }

    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-5">
            <h2 class="display-4">Fonctionnalités Principales</h2>
            <p class="lead text-muted">Tout ce dont vous avez besoin pour gérer vos matchs de basketball</p>
        </div>

        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon">📝</div>
                <h3 class="feature-title">Préparation Complète</h3>
                <p class="feature-description">
                    Configuration détaillée des matchs : équipes, joueurs, numéros, durée des quart-temps,
