@* Layout principal de l'application - Basé sur les exemples ASP.NET des cours *@
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Basketball LiveScore</title>

    @* Bootstrap pour le style - comme dans les exemples de cours *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">🏀 Basketball LiveScore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("Token") != null)
                        {
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Dashboard">Tableau de bord</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/MatchSetup">Nouveau Match</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/LiveScore">Score en Direct</a>
                        </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Token") != null)
                        {
                        <li class="nav-item">
                            <span class="nav-link text-light">@Context.Session.GetString("Username")</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Logout">Déconnexion</a>
                        </li>
                        }
                        else
                        {
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Login">Connexion</a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Basketball LiveScore - Projet .NET
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>