@page
@model BasketballLiveScore.Pages.LoginModel
@{
    ViewData["Title"] = "Connexion";
}

@section Styles {
    <style>
        /* Styles spécifiques à la page de connexion */
        .login-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .login-header {
            background: linear-gradient(135deg, #FF6B35 0%, #004E89 100%);
            color: white;
            padding: 1.5rem;
            text-align: center;
        }

        .login-body {
            padding: 2rem;
        }

        .form-control:focus {
            border-color: #FF6B35;
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
        }

        .btn-login {
            background-color: #FF6B35;
            border-color: #FF6B35;
            color: white;
            font-weight: bold;
        }

            .btn-login:hover {
                background-color: #e55a2b;
                border-color: #e55a2b;
            }
    </style>
}

<div class="login-container">
    <div class="login-card card">
        <div class="login-header">
            <h3 class="mb-0">🏀 Basketball LiveScore</h3>
            <p class="mb-0 mt-2">Connexion</p>
        </div>
        <div class="login-body">
            @* Affichage des erreurs *@
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
            </div>
            }

            @* Formulaire de connexion *@
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="LoginInput.Name" class="form-label">Nom d'utilisateur</label>
                    <input asp-for="LoginInput.Name" class="form-control" placeholder="Entrez votre nom d'utilisateur" required />
                    <span asp-validation-for="LoginInput.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="LoginInput.Password" class="form-label">Mot de passe</label>
                    <input asp-for="LoginInput.Password" type="password" class="form-control" placeholder="Entrez votre mot de passe" required />
                    <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-login w-100">Se connecter</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}