@* Pages/Login.cshtml *@
@page
@model BasketballLiveScore.Pages.LoginModel
@{
    ViewData["Title"] = "Connexion";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Basketball LiveScore - Connexion</h3>
                </div>
                <div class="card-body">
                    @* Affichage des erreurs *@
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                    <div class="alert alert-danger" role="alert">
                        @Model.ErrorMessage
                    </div>
                    }

                    @* Formulaire de connexion *@
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="LoginInput.Name" class="form-label">Nom d'utilisateur</label>
                            <input asp-for="LoginInput.Name" class="form-control" required />
                            <span asp-validation-for="LoginInput.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LoginInput.Password" class="form-label">Mot de passe</label>
                            <input asp-for="LoginInput.Password" type="password" class="form-control" required />
                            <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Se connecter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}